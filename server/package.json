{
  "name": "kindred-paths-server",
  "version": "0.0.1",
  "author": "Simon Karman",
  "description": "A tool for managing the cards in Kindred Paths, the custom Magic the Gathering set by Simon Karman",
  "private": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "./card-conjurer.sh && nodemon --exec ts-node src/index.ts --watch src --watch package.json",
    "postinstall": "npx playwright install chromium && npx playwright install"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@leonardo-ai/sdk": "^4.20.0",
    "express": "^5.1.0",
    "kindred-paths": "file:../shared",
    "playwright": "^1.53.2",
    "sharp": "^0.34.3",
    "simple-git": "^3.28.0",
    "zod": "^3.25.76"
  }
}
